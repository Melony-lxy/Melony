.applyclassrepresentative {
  padding-bottom: 30rpx;
}
.applyclassrepresentative .applybtn {
  width: 95%;
  margin: 0 auto;
  margin-top: 100rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  background-color: #ff6638;
  line-height: 100rpx;
  border-radius: 100rpx;
  font-weight: bold;
}
.applyclassrepresentative .tips {
  width: 95%;
  margin: 0 auto;
  margin-top: 80rpx;
}
.applyclassrepresentative .tips .tips_title {
  font-size: 36rpx;
  margin: 20rpx 0;
  opacity: 0.8;
}
.applyclassrepresentative .tips .tips_content {
  font-size: 30rpx;
  opacity: 0.6;
  line-height: 1.8;
}
.applyclassrepresentative .search {
  background: #c0c4cc;
}
.applyclassrepresentative .search .search_input {
  width: 95%;
  margin: 0 auto;
  padding-top: 40rpx;
}
.applyclassrepresentative .search .search_input .popup_input {
  background-color: #fff;
  border-radius: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.applyclassrepresentative .search .search_input .popup_outbox {
  padding: 40rpx 0;
}
.applyclassrepresentative .search .search_input .choose {
  width: 90%;
  margin: 0 auto;
  line-height: 100rpx;
  border-bottom: 2rpx solid #c0c4cc;
}
.applyclassrepresentative .search .search_input .popup_box {
  background-color: #fff;
  height: 500rpx;
  border-radius: 10rpx;
}
.applyclassrepresentative .personalinformation {
  background-color: #fff;
}
.applyclassrepresentative .personalinformation .title {
  width: 95%;
  margin: 0 auto;
  display: flex;
  font-size: 32rpx;
  align-items: center;
  margin-top: 30rpx;
}
.applyclassrepresentative .personalinformation .title .left_line {
  margin-right: 20rpx;
  background-color: #ff6638;
  width: 6rpx;
  height: 40rpx;
}
.applyclassrepresentative .personalinformation .title .TitleText {
  opacity: 0.8;
}
.applyclassrepresentative .personalinformation .wechat {
  width: 95%;
  margin: 0 auto;
  display: flex;
  height: 100rpx;
  margin-top: 30rpx;
}
.applyclassrepresentative .personalinformation .wechat .wechat-img {
  width: 17%;
  height: 100%;
}
.applyclassrepresentative .personalinformation .wechat .wechat-content {
  width: 60%;
  height: 100%;
}
.applyclassrepresentative .personalinformation .wechat .wechat-binding {
  width: 23%;
  height: 100%;
}
.applyclassrepresentative .personalinformation .wechat .wechat-binding .CodeBtn {
  padding: 16rpx 24rpx;
  background: #ff6638;
  color: #fff;
  font-size: 24rpx;
  border-radius: 100rpx;
}
.applyclassrepresentative .personalinformation .form {
  width: 95%;
  margin: 0 auto;
}
.applyclassrepresentative .personalinformation .form .bank_right {
  display: flex;
}
.applyclassrepresentative .personalinformation .form .bank_right uni-image {
  padding-left: 10rpx;
  width: 30rpx;
  height: 30rpx;
}
.applyclassrepresentative .personalinformation .form .form_left {
  display: flex;
  align-items: center;
}
.applyclassrepresentative .personalinformation .form .Verification_Code {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0rpx 0;
}
.applyclassrepresentative .personalinformation .form .Verification_Code .CodeBtn {
  padding: 16rpx 24rpx;
  background: #ff6638;
  color: #fff;
  font-size: 24rpx;
  border-radius: 100rpx;
}
.applyclassrepresentative .personalinformation .form .important {
  color: red;
  padding-right: 10rpx;
}
.applyclassrepresentative .personalinformation .form .telephone {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 40rpx 0;
}


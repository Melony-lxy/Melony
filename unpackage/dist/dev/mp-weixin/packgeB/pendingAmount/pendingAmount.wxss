.coursecenter {
  width: 100%;
}
.coursecenter .ordername {
  font-weight: bold;
  font-size: 30rpx;
}
.coursecenter .avatarimg {
  display: flex;
}
.coursecenter .avatarimg ._img {
  margin-top: 10rpx;
  margin-right: 20rpx;
  width: 105rpx;
  height: 70rpx;
  object-fit: cover;
}
.coursecenter .nomore {
  padding-top: 50rpx;
  padding-bottom: 20rpx;
  text-align: center;
  font-size: 24rpx;
  opacity: .8;
}
.coursecenter .wallet {
  width: 95%;
  padding: 0rpx 2.5%;
  display: flex;
  background-color: rgba(255, 102, 56, 0.8);
  justify-content: space-between;
  align-items: center;
  padding-bottom: 100rpx;
}
.coursecenter .wallet .wallet_left {
  font-size: 34rpx;
  font-family: Source Han Sans SC;
  color: #fff;
}
.coursecenter .wallet .wallet_left .money {
  margin-top: 30rpx;
}
.coursecenter .wallet .withdrawal {
  background-color: #ff6638;
  color: #fff;
  font-size: 30rpx;
  padding: 10rpx 30rpx;
  border-radius: 100rpx;
}
.coursecenter .information {
  width: 95%;
  height: 100rpx;
  padding: 50rpx 2.5%;
  display: flex;
  background-color: rgba(255, 102, 56, 0.8);
  align-items: center;
  justify-content: space-between;
}
.coursecenter .information .tip {
  font-size: 30rpx;
  color: #fff;
  display: flex;
  align-items: center;
}
.coursecenter .information .tip .tipImg {
  margin-right: 5rpx;
  width: 30rpx;
}
.coursecenter .information .information_left {
  display: flex;
  align-items: center;
}
.coursecenter .information .information_left .avatar {
  width: 100rpx;
  height: 100rpx;
  object-fit: cover;
  border-radius: 50%;
  margin-right: 27rpx;
}
.coursecenter .information .information_left .information_name {
  font-size: 34rpx;
  font-family: Source Han Sans SC;
  font-weight: bold;
  color: #fff;
}
.coursecenter .information .information_left .information_class {
  font-size: 20rpx;
  margin-top: 10rpx;
  color: #fff;
  opacity: .8;
  border: 1px solid #Fff;
  text-align: center;
  border-radius: 30rpx;
}
.coursecenter .order {
  width: 95%;
  padding: 0 2.5%;
  margin-top: -50rpx;
  background-color: #Fff;
  padding-top: 30rpx;
  border-radius: 30rpx;
}
.coursecenter .order .OrderList {
  width: 95%;
  margin: 0 auto;
  margin-top: 30rpx;
}
.coursecenter .order .OrderList .OrderDetails {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #00000021;
}
.coursecenter .order .OrderList .OrderDetails .classorder {
  opacity: .9;
  font-size: 28rpx;
  line-height: 2;
}
.coursecenter .order .OrderList .OrderDetails .OrderTitle {
  font-size: 28rpx;
  width: 400rpx;
  line-height: 1.5;
  margin-bottom: 5rpx;
}
.coursecenter .order .OrderList .OrderDetails .OrderWhy {
  font-size: 26rpx;
  opacity: .8;
}
.coursecenter .order .title {
  display: flex;
  font-size: 32rpx;
  align-items: center;
  margin-bottom: 20rpx;
}
.coursecenter .order .title .left_line {
  margin-right: 20rpx;
  background-color: #ff6638;
  width: 6rpx;
  height: 40rpx;
}
.coursecenter .order .calculation {
  display: flex;
  margin-bottom: 70rpx;
}
.coursecenter .order .calculation .CalculationBox {
  width: 25%;
}
.coursecenter .order .calculation .CalculationBox view {
  height: 60rpx;
  font-size: 30rpx;
  text-align: center;
  line-height: 60rpx;
}
.coursecenter .order .calculation .CalculationBox .num {
  font-weight: bold;
}

